			Date fechanac=request.getParameter("fecha");

			
		//Instanciamos las Clases
			ClassAlumno clal = new ClassAlumno();
			ClassAlumnoImp crudclal= new ClassAlumnoImp();
			
		//Asignamos Valores del Formulario
			clprod.setNombre(nom);
